function searchPattern(patt1) {
  var pattern = '';
  var patt2 =  '^[*]$';
  var patt3 = '((' + patt1 + '[\\-]' + patt1 + '))|^(' + patt1 + '(,(' + patt1 +
    '[\\-]' + patt1 + ')|(,' + patt1 + '))+)$|(([*]|' + patt1 + ')[/]' + patt1 + ')';
  pattern = '^' + patt1 + '$' + '|' + patt2 + '|' + patt3;
  return pattern;
}

