function storeData(arr, val) {
    var duplicate = false;
    var i;
    for (i = 0; i < arr.length; i++) {
        if (val == arr[i].name) {
            duplicate = true;
            break;
        }
    }
    if (! duplicate) {
        arr.push({name: val});
    }
    return arr;
}

