             }
             if (type === 'pid') {
                 $scope.polChanged.sources[index].pid = true;
             }
             if (type === 'policy') {
                 $scope.polChanged.sources[index].policy = true;
             }
          }
        if (type === 'collection') {
          $scope.pristineFlags.sources[index].coll = false;
